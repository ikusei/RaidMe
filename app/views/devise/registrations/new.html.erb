<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="text email"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="text password"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="textButton"><%= f.submit "LOGIN" %></div>
<% end %>


<%= render "devise/shared/links" %>