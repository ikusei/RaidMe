<h1>Listing products</h1>


<% if @products.present? %>
  <table>
    <tr>
	  <th>Name: </th>
	  <th>Besitzer: </th>
	</tr>
  <% @products.each do |product| %>
	<tr>
	  <th><%= product.name %></th>
	  <% if product.user.present? %>
	    <th><%= product.user.first_name + " " + product.user.last_name %></th>
	  
	  <% end %>
	</tr>
  <br/>
  <% end %>
  </table>
<% end %>




<br />

<%= link_to 'New Product', new_product_path, id: "new_product_link", remote: true %>
