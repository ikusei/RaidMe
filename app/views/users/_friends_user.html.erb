<% unless current_user.id == @user.id %>
  <% if @fridge_friend.count <= 0 %> 
    <%= link_to 'send Friend request', fridge_friends_path(:friend_id => @user.id), :method => :post %>
  <% end %>
  <% if @fridge_friend.count > 0 %>  
  	<% @fridge_friend.each do |friends| %>
      <% if friends.acceptance == true && friends.friend_id == @user.id %>
        <%= link_to 'delete Friend request', get_friend_by_user, :method => :delete, :id => "remove Friend" %>
      <% end %>
      <% if friends.friend_id != @user.id %>
        <%= link_to 'send Friend request', fridge_friends_path(:friend_id => @user.id), :method => :post %>
      <% end %>
      
    <% end %>
  <% end %>
<% end %>


<% if @fridge_friend.length != 0 %>
  <% if current_user.id == @user.id %>
    <% for i in 0...@fridge_friend.length %> 
      <% if @fridge_friend[i].friend_id == current_user.id && @fridge_friend[i].acceptance == false %>
             
        <p>You can accept the Friend Request </p><%= render 'users/fridge_friend_update_form', :fridge_friend => @fridge_friend[i] %>
      <% end %>
      <% if @fridge_friend[i].acceptance == true && @fridge_friend[i].user_id != current_user.id && current_user.id == @fridge_friend[i].friend_id %>
        <% if @fridge_friend[i].user.first_name.present? && @fridge_friend[i].user.last_name.present? %>
          <%= link_to @fridge_friend[i].user.first_name + " " + @fridge_friend[i].user.last_name, user_path(@fridge_friend[i].user.id.to_s) %>
        <% else %>
          <%= link_to @fridge_friend[i].user.email, user_path(@fridge_friend[i].user.id.to_s) %>
        <% end %>
      <% end %>

      <% if @fridge_friend[i].acceptance == true && @fridge_friend[i].user_id == current_user.id %>
        <% if @fridge_friend[i].friend.first_name.present? && @fridge_friend[i].friend.last_name.present? %>
          <%= link_to @fridge_friend[i].friend.first_name + " " + @fridge_friend[i].friend.last_name, user_path(@fridge_friend[i].friend.id.to_s) %>
        <% else %>
          <%= link_to @fridge_friend[i].friend.email, user_path(@fridge_friend[i].friend.id.to_s) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <p>Currently no Friends!</p>
<% end %>

