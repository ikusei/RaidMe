<div class="friendpool">
<div class="friendpool_headline">
  <h2>All Users</h2>
</div>
<% for user in @users %>
  <div class="user">
    <% if user.id != current_user.id %>
    <p>
    <% if user.first_name.present? %>
      <figure><%= gravatar_for user, :size=>100 %>
      <figcaption><%= user.first_name %></figcaption>
      <%= link_to "Add Friend", fridge_friends_path(:friend_id => user), :method => :post %></figure>
      <div class="clear"></div>
    <% else %>
      <figure><%= gravatar_for user, :size=>100 %>
      <figcaption><%= user.email %></figcaption>
      <%= link_to "Add Friend", fridge_friends_path(:friend_id => user), :method => :post %></figure>
      <div class="clear"></div>
    <% end %>
    <% unless user.email.present? %>
    Sorry you are the only registered Person at time!
    <% end %>
    </p>
    <% end %>
  </div>
<% end %>
</div>