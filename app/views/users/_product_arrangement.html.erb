<% if @user.id == current_user.id %>
  <% if @product_arrangement.present? %>
   
    <% ProductArrangement.all.each do |pa| %>
      <% if current_user.id == pa.user_id && pa.acceptance == nil %>
       <p>Sie haben folgende Produkte bei folgenden Personenen bestellt: </p>
        <%= pa.product.name %>, <%= pa.interest.first_name + " " + pa.interest.last_name if pa.interest.present? %>
        <%= link_to "Delete Request", get_arrangement, :method => :delete %>
      <% end %>
      <% if current_user.id == pa.user_id && pa.acceptance == true %>
        <p>die Anfrage nach <%= pa.product.name %> wurde akzeptiert. <%= link_to "Delete Message", get_arrangement, :method => :delete %></p>
      <% end %>
    <% end %>
  <% end %>

  <% if @product_arrangement.length != 0 %>
    
    <% for i in 0...@product_arrangement.length %>
      <% if current_user.id == @product_arrangement[i].interest_id && @product_arrangement[i].acceptance == nil %>
      <p>Folgende Personen haben bei Ihnen folgende Produkte bestellt: </p>
        <%= @product_arrangement[i].product.name %>, <%= @product_arrangement[i].user.first_name if @product_arrangement[i].user.present? %> <%= @product_arrangement[i].user.last_name if @product_arrangement[i].user.present? %>
        <p>You can accept the Request</p><%= render 'users/product_arrangement_update_form', :product_arrangement => @product_arrangement[i] %>
      <% end %>
      
    <% end %>
  <% end %>
<% end %>

