
<% if @product.present? %>
  <% Product.all.each do |product| %>
    <% if product.user_id == @user.id %>
	  <%= product.name %>
	  <%= product.marke %>
	  <%= product.ort %>
	<% end %>
	<% if current_user.id != @user.id && @user.id == product.user_id %>
	  <%= link_to "Send Request", product_arrangements_path(:user_id => current_user.id, :interest_id => @user.id, :product_id => product.id), :method => :post %>
    <% end %>
  <br/>
  <% end %>
<% end %>

