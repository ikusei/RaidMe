<!DOCTYPE html>
<html>
<head>

  <title>RaidMe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div id="mobile-nav-holder">
      <div class="wrapper">
        <ul id="mobile-nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Impressum', imprint_path %></li>
          <% if user_signed_in? %>
          <li class="current-menu-item"><%= link_to "My Fridge", user_path(current_user)  %></li>
          <li><%= link_to "Fridge-Friends", fridge_friends_path %></li>
          <% end %>
        </ul>
        <div id="nav-open"><a href="#">Menu</a></div>
      </div>
    </div>

  <header>

    <div class="wrapper">
      <%= link_to image_tag("logo.png", :title => "Tandem", :id => "logo"), root_path %>

      <nav>
        <ul id="nav" class="sf-menu">
          <li><%= link_to (root_path) do %>Home<span class="subheader">welcome</span><% end %></li>
          <li><%= link_to (about_path) do %>About<span class="subheader">raid me</span><% end %></li>
          <li><%= link_to 'Impressum', imprint_path %></li>
          <% if user_signed_in? %>
          <li><%= link_to(user_path(current_user)) do  %>My Fridge<span class="subheader">are you hungry?</span><% end %></li>
          
          <li><%= link_to (fridge_friends_path) do  %>Fridge Friends<span class="subheader">my favourite</span><% end %></li>
          <% end %>
        </ul>
      </nav>
    </div>


    <div id="user_area">
    <div id="user-area-content">

    
    <div id="user_nav">

      <div id="logged_in">
        <div>
        <% if user_signed_in? %>
          <%= gravatar_for current_user %>
          <span> Angemeldet als: </span><br />
          <% if current_user.first_name.present? && current_user.last_name.present? %>
            <span><%= current_user.first_name %> <%= current_user.last_name %></span><br/>
          <% else %>
            <span><%= current_user.email %></span><br />
          <% end %>
          <%= link_to "My Fridge", user_path(current_user) %> |
          <%= link_to 'Edit profile', edit_user_registration_path %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        <% else %>
          <div class="not_signed_in">
          <%= link_to "Sign up", new_user_registration_path %> |
          <%= link_to "Login", new_user_session_path %> |
          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
        </div>
        <% end %>
        </div>
        <div class="clear" ></div>
      </div>
    </div>
    </div>
    </div>
  </header>
  <p class="notice" align="center"><%= notice %></p>
  <p class="alert" align="center"><%= alert %></p>

    <div id="main">
        
      <!-- social -->
      <div id="social-bar">
        <ul>
          <li><%= link_to image_tag("social/facebook_32.png", :title => "Become a fan", :alt => "Facebook"), "www.facebook.com/raidme" %></li>
          <li><%= link_to image_tag("social/twitter_32.png", :title => "Follow my tweets", :alt => "Tiwtter"), "www.twitter.com/raidme" %></li>
        </ul>
      </div>
      <!-- ENDS social -->
     
     
      
      <!-- Content -->
      <div id="content">
    
        <%= yield %>
                      
      </div>
      <!-- ENDS content -->
      
      <div class="clearfix"></div>
      <div class="shadow-main"></div> 
    </div>

 

    <!-- ENDS MAIN -->
</body>
</html>
