<!DOCTYPE html>
<html>
<head>

  <title>RaidMe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="mobile-nav-holder">
      <div class="wrapper">
        <ul id="mobile-nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Impressum', imprint_path %></li>
          <li class="current-menu-item"><%= link_to "My Fridge", user_path(current_user)  %></li>
          <li><%= link_to "Fridge-Friends", fridge_friends_path %></li>
        </ul>
        <div id="nav-open"><a href="#">Menu</a></div>
      </div>
    </div>
    <!-- ENDS mobile-nav -->
      
    <header>
      
        
      <div class="wrapper">
        <%= link_to image_tag("logo.png", :title => "Tandem", :id => "logo"), root_path %>

        <nav>
          <ul id="nav" class="sf-menu">
            <li><%= link_to 'Home', root_path %><span class="subheader">welcome</span></li>
            <li><%= link_to 'About', about_path %><span class="subheader">raid me</span></li>
            <li class="current-menu-item"><%= link_to "My Fridge", user_path(current_user)  %><span class="subheader">are you hungry?</span></li>
            <li><%= link_to "Fridge-Friends", fridge_friends_path %><span class="subheader">my favourite</span></li>
          </ul>
        </nav>
        
        </div>
        
        
        
        <!-- Profil -->
  
      <div id="user_area">
      <div id="user-area-content">

    <div id="logged_in" >
    
      <% if user_signed_in? %>
      <%= gravatar_for current_user , :style => "float:left;margin-right:5px; margin-top:5px;", :size => "50" %>
      <span>Angemeldet als: </span><br />
      <% if current_user.first_name.present? && current_user.last_name.present? %>
        <span><%= current_user.first_name + " " + current_user.last_name %></span><br />
      <% else %>
        <span><%= current_user.email %></span>
      <% end %>
      <%= link_to "My Fridge", user_path(current_user)  %>
      <%= link_to 'Edit profile', edit_user_registration_path %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> |
      <%= link_to "Login", new_user_session_path %> |
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    <% end %>

        </div>
        <div class="clear"></div>
        </div>
        <div class="clearfix"></div>
          
      </div>
      
    <!-- ENDS Profil -->    

    </header>
        
    <!-- MAIN -->
    <div id="main">
        
      <!-- social -->
      <div id="social-bar">
        <ul>
          <li><%= link_to image_tag("social/facebook_32.png", :title => "Become a fan", :alt => "Facebook"), "www.facebook.com/raidme" %></li>
          <li><%= link_to image_tag("social/twitter_32.png", :title => "Follow my tweets", :alt => "Tiwtter"), "www.twitter.com/raidme" %></li>
        </ul>
      </div>
      <!-- ENDS social -->
      
      
      
      <!-- Content -->
      <div id="content">
    
        <%= yield %>
                      
      </div>
      <!-- ENDS content -->
      
      <div class="clearfix"></div>
      <div class="shadow-main"></div> 
      <p class="notice" align="center"><%= notice %></p>
      <p class="alert" align="center"><%= alert %></p>
    </div>
    <!-- ENDS MAIN -->
</body>
</html>
