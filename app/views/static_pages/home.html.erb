		<figure>
			<a href="#" class="thumb" id="search"><%= image_tag("suchen.jpg", :alt => "SUCHEN") %></a>
		</figure>
	
		<figure>
		  <% if user_signed_in? %>
			<%= link_to image_tag("geben.jpg", :alt => "GEBEN"), new_product_path , :class => "thumb" %>
		  <% else %>
