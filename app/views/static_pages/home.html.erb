	<div class="trenner">
	  <%= image_tag("trennlinie.png", :alt => "trennlinie") %>
	</div>

<!-- SUCHEN -->
		<!--suchfeld-->
	<div class="form">
	<%= form_tag(search_updatemap_path, :class => "form-wrapper cf") do %>
  		<%= text_field_tag :searchArticle, @storred_search_article, :placeholder => 'Search here for food and drinks...' %>
 		<%= button_tag "Search" %>
	<% end %>
	</div>
<!-- tabelle suchergebnisse -->

  <div class="suchergebnisse">
		
	<table cellpadding="0"> 
	  <thead><tr> 
		<th>PRODUCT</th> 
		<th>NAME</th> 
		<th>ROOM NR.</th> 
		<th></th> 
		</tr></thead> 

	<div class="trenner_suchergebnis">
	<%= image_tag("trennlinie.png", :alt => "trennlinie") %>
	</div>

	  <tbody> <% @products.each do |p| %>
	  	<% if @storred_search_article.present? %>
	  	  <% if p.name == @storred_search_article %>
	  	    <tr> 
			  <td><%= p.name if p.name.present? %></td> 
			  <% if p.user.first_name && p.user.last_name && p.user.roomnumber %>
			  <td><%= p.user.first_name %> <%= p.user.last_name %></td>
			  <td><%= p.user.roomnumber %></td> 
			  <% end %>
			  <% if user_signed_in? %>
			  <td><%= link_to "GET IT", user_path(p.user_id) %></td> 
			  <% end %>
			</tr>
	  	  <% else %>
	  	    <p> No products </p>
	  	  <% end %>
	  	<% else %>
	  	  <tr> 
			<td><%= p.name if p.name.present?%></td>
			<% if p.user_id.present? %> 
			<td><%= p.user.first_name %> <%= p.user.last_name %></td>
			<td><%= p.user.roomnumber %></td> 
			<% end %>
			<% if user_signed_in? %>
			<td><%= link_to "GET IT", user_path(p.user_id) %></td> 
			<% end %>
		  </tr>
	  	<% end %>
	  <% end %>
	  </tbody> 
	  </table>
	</div>
						        		
	<!-- ENDS suchen -->

  <div class="clearfix"></div>
  

</div>
